# ==============================================
# eKaty Restaurant Agent - Docker Configuration
# ==============================================
# 
# SECURITY NOTES:
# - Never commit .env to version control
# - Use Docker secrets for production deployments
# - Rotate API keys regularly
# - Restrict file permissions: chmod 600 .env
#
# ==============================================

# ==============================================
# Google Places API
# ==============================================
# Get your API key from: https://console.cloud.google.com/
GOOGLE_PLACES_API_KEY=your_api_key_here

# ==============================================
# Database Configuration
# ==============================================
# SQLite (default - recommended for single instance)
DB_TYPE=sqlite
DB_PATH=/app/data/ekaty.db

# PostgreSQL (for scaled deployments)
# DB_TYPE=pgsql
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=ekaty
# DB_USER=ekaty
# DB_PASS=secure_password_here

# ==============================================
# Location Settings (Katy, TX)
# ==============================================
LOCATION_LAT=29.7858
LOCATION_LNG=-95.8245
SEARCH_RADIUS=15000
SEARCH_TYPE=restaurant

# ==============================================
# Sync Configuration
# ==============================================
SYNC_ENABLED=true
SYNC_SCHEDULE="0 3 * * *"
RATE_LIMIT_DELAY=100
MAX_RETRIES=3
RETRY_DELAY=5

# ==============================================
# Monitoring & Alerts
# ==============================================
ALERT_EMAIL=james@ekaty.com
ALERT_WEBHOOK_URL=

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30
LOG_DIR=/app/logs

# ==============================================
# Application Settings
# ==============================================
APP_ENV=production
APP_DEBUG=false
TIMEZONE=America/Chicago
