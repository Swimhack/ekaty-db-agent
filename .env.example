# eKaty Restaurant Agent Configuration

# Google Places API
GOOGLE_PLACES_API_KEY=your_api_key_here

# Database Configuration
DB_PATH=./data/ekaty.db
DB_TYPE=sqlite
# For PostgreSQL (optional):
# DB_TYPE=pgsql
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=ekaty
# DB_USER=ekaty
# DB_PASS=

# Location Settings (Katy, TX)
LOCATION_LAT=29.7858
LOCATION_LNG=-95.8245
SEARCH_RADIUS=15000
SEARCH_TYPE=restaurant

# Sync Configuration
SYNC_ENABLED=true
SYNC_SCHEDULE="0 3 * * *"
RATE_LIMIT_DELAY=100
MAX_RETRIES=3
RETRY_DELAY=5

# Monitoring & Alerts
ALERT_EMAIL=james@ekaty.com
ALERT_WEBHOOK_URL=
LOG_LEVEL=INFO
LOG_RETENTION_DAYS=30

# Environment
APP_ENV=production
APP_DEBUG=false
TIMEZONE=America/Chicago
